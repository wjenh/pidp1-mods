// Useful things for extended memory access
#ifndef MEMORY_AH
#define MEMORY_AH

#define farjmp(a) \
    jmp i [a]

#define farjsp(a) \
    jsp i [a]

#define farjda(a) \
    dac i [a]; jsp i [a+1]

#define farlac(a) \
    lac i [a]

#define farlio(a) \
    lio i [a]

#define fardac(a) \
    dac i [a]

#define fardio(a) \
    dio i [a]

#endif
